<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/msg_layout_top_margin">

    <View
            android:id="@+id/item_attachment_avatar_placeholder"
            android:layout_width="@dimen/msg_avatar_image_size"
            android:layout_height="@dimen/msg_avatar_image_size"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/msg_default_corner_radius"
            app:layout_constraintStart_toEndOf="@+id/item_attachment_avatar_placeholder"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/item_attachment_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/attachment_image_size"
                    android:maxWidth="@dimen/msg_sent_max_width"/>

            <TextView
                    android:id="@+id/item_attachment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>