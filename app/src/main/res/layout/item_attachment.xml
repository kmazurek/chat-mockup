<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_attachment_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/msg_layout_top_margin"
        android:orientation="horizontal">

    <View
            android:id="@+id/item_attachment_avatar_placeholder"
            android:layout_width="@dimen/msg_avatar_image_size"
            android:layout_height="@dimen/msg_avatar_image_size"
            android:layout_marginEnd="16dp"
            android:layout_gravity="top"/>

    <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="top"
            app:cardCornerRadius="@dimen/msg_default_corner_radius">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/item_attachment_image"
                    android:layout_width="@dimen/msg_content_max_width"
                    android:layout_height="@dimen/msg_content_max_width"/>

            <TextView
                    android:id="@+id/item_attachment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>